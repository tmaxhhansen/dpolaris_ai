{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dpolaris.ai/schemas/reproducibility_summary.schema.json",
  "title": "ReproducibilitySummary",
  "type": "object",
  "required": [
    "checks",
    "score",
    "snapshots",
    "data_hashes_resolvable",
    "re_executable_with_same_config"
  ],
  "properties": {
    "checks": {
      "type": "object",
      "required": [
        "snapshots_present",
        "data_hashes_resolvable",
        "re_executable_with_same_config"
      ],
      "properties": {
        "snapshots_present": { "type": "boolean" },
        "data_hashes_resolvable": { "type": "boolean" },
        "re_executable_with_same_config": { "type": "boolean" }
      },
      "additionalProperties": true
    },
    "score": { "type": "integer", "minimum": 0, "maximum": 100 },
    "snapshots": {
      "type": "object",
      "required": ["config_snapshot", "dependency_snapshot", "data_hashes"],
      "properties": {
        "config_snapshot": { "type": "string" },
        "dependency_snapshot": { "type": "string" },
        "data_hashes": { "type": "string" }
      },
      "additionalProperties": true
    },
    "data_hashes_resolvable": { "type": "boolean" },
    "re_executable_with_same_config": { "type": "boolean" }
  },
  "additionalProperties": true
}
