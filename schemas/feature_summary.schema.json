{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dpolaris.ai/schemas/feature_summary.schema.json",
  "title": "FeatureSummary",
  "type": "object",
  "required": [
    "feature_registry_version",
    "features",
    "missingness_per_feature",
    "normalization_method",
    "leakage_checks_status"
  ],
  "properties": {
    "feature_registry_version": { "type": ["string", "null"] },
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "params"],
        "properties": {
          "name": { "type": "string" },
          "params": { "type": "object", "additionalProperties": true }
        },
        "additionalProperties": true
      }
    },
    "missingness_per_feature": { "type": "object", "additionalProperties": true },
    "normalization_method": { "type": ["string", "null"] },
    "leakage_checks_status": { "type": "string" }
  },
  "additionalProperties": true
}
